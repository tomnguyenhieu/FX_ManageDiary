<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="331.0" prefWidth="474.0" spacing="20.0" style="-fx-background-color: FFFFFF;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafx.javafx1.AddClassController">
   <children>
      <Label alignment="CENTER" prefHeight="80.0" prefWidth="474.0" style="-fx-background-color: #CE4848;" text="Vui lòng nhập thông tin" textFill="#fffafa">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
      </Label>
      <VBox prefHeight="133.0" prefWidth="474.0" spacing="10.0">
         <children>
            <TextField fx:id="inputClass" prefHeight="65.0" prefWidth="474.0" promptText="Nhập tên lớp" style="-fx-background-radius: 4;">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin>
               <font>
                  <Font size="18.0" />
               </font>
            </TextField>
            <ComboBox fx:id="cbTeachersName" prefHeight="65.0" prefWidth="474.0" promptText="Tên giáo viên">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin>
            </ComboBox>
         </children>
      </VBox>
      <HBox alignment="CENTER_RIGHT" prefHeight="54.0" prefWidth="474.0" spacing="15.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onActionCancel" prefHeight="47.0" prefWidth="128.0" style="-fx-background-color: #30475E; -fx-font-style: #F5F5F5; -fx-background-radius: 10px;" text="Hủy" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button mnemonicParsing="false" onAction="#onActionConfirm" prefHeight="47.0" prefWidth="128.0" style="-fx-background-color: #30475E; -fx-background-radius: 10px;" text="Xác nhận" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </HBox>
   </children>
</VBox>
